    <inputthing name="Exempt selected talent from ban" helptext="Check this box if the drawback allows the user a select a talent that is exempted from the ban (such as with Shape Focus)">
      <it_tagcheck group="SphOfGuil" tag="DBBanSelEx"/>
      </inputthing>
    <inputthing name="Other">
