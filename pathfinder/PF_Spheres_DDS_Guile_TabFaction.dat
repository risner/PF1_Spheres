  <portal id="pSoGFaction" style="lblTitle">
    <label text="Faction Sphere"/>
    </portal>
  <portal id="pSoGTalFaction" style="table">
    <table_dynamic component="SoGTalent" showtemplate="tmSoGTalPk" choosetemplate="tmSoGTalTh" showsortset="SoGTalSort" choosesortset="SoGTalSort" descwidth="350">
      <list><![CDATA[component.SoGTalent & !Hide.All & SoGSphere.Faction & !SoGTlClass.Package & !SphOfGuil.HideTables]]></list>
      <candidate><![CDATA[(SoGTlClass.ExcepTalent | SoGTlClass.Talent | SoGTlClass.GainSphere) & SoGSphere.Faction & !SoGTlClass.InitTalent & !SoGTlClass.Helper & !SoGTlClass.Package & !Helper.Obsolete & !thingid.sogTlHd?]]></candidate>
      <autotag group="SoGBonTal" tag="Faction"/>
      <description/>
      <headertitle><![CDATA[@text = "Faction Talents"]]></headertitle>
      <additem><![CDATA[@text = hero.childfound[resSGSEFaction].field[resAddICnt].text]]></additem>
      </table_dynamic>
    </portal>
  <portal id="pSoGDrwFaction" style="table">
    <table_dynamic component="SoGDrawbk" showtemplate="tmSoGTalPk" choosetemplate="tmSoGTalTh">
      <list><![CDATA[component.SoGDrawbk & !Hide.All & SoGSphere.Faction]]></list>
      <candidate><![CDATA[SoGSphere.Faction & !Helper.Obsolete]]></candidate>
      <description/>
      <headertitle><![CDATA[@text = "Faction Drawbacks"]]></headertitle>
      <additem><![CDATA[@text = "Add Faction Drawback"]]></additem>
      </table_dynamic>
    </portal>
  <!-- Faction Info layout -->
  <layout id="loSoGFaction">
    <portalref portal="pSoGFaction" taborder="5"/>
    <portalref portal="pSoGDrwFaction" taborder="10"/>
    <portalref portal="pSoGTalFaction" taborder="15"/>
    <templateref template="tmSoGAsRnSph" thing="sogSpFaction"/>
    <templateref template="tmSoGDCSph" thing="sogSpFaction"/>
    <templateref template="tmSoGRngSp" thing="sogSpFaction"/>
    <position><![CDATA[
                autogap = 2

                perform portal[pSoGFaction].batchadd
                portal[pSoGFaction].width = autoright

                ~ Associated Skill label
                perform template[tmSoGAsRnSph].batchadd

                ~ Save DC label
                perform template[tmSoGDCSph].batchadd

                ~ Ranges
                perform template[tmSoGRngSp].batchadd

                perform portal[pSoGTalFaction].batchadd[5]
                portal[pSoGTalFaction].width = autoright

                perform portal[pSoGDrwFaction].batchadd[5]
                portal[pSoGDrwFaction].width = autoright

                height += portal[pSoGDrwFaction].bottom
                perform batchplace
	]]></position>
    </layout>
  <!-- PANELS -->
  <panel id="tbSoGFaction" name="Faction" order="160" marginhorz="5" marginvert="5">
    <live>SoGSphTab.Faction</live>
    <layoutref layout="loSoGFaction"/>
    </panel>
  </document>
