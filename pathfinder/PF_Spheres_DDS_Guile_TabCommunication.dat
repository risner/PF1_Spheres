  <portal id="pSoGCommunication" style="lblTitle">
    <label text="Communication Sphere"/>
    </portal>
  <portal id="pSoGTalCommunication" style="table">
    <table_dynamic component="SoGTalent" showtemplate="tmSoGTalPk" choosetemplate="tmSoGTalTh" showsortset="SoGTalSort" choosesortset="SoGTalSort" descwidth="350">
      <list><![CDATA[component.SoGTalent & !Hide.All & SoGSphere.Communication & !SoGTlClass.Package & !SphOfGuil.HideTables]]></list>
      <candidate><![CDATA[(SoGTlClass.ExcepTalent | SoGTlClass.Talent | SoGTlClass.GainSphere) & SoGSphere.Communication & !SoGTlClass.InitTalent & !SoGTlClass.Helper & !SoGTlClass.Package & !Helper.Obsolete & !thingid.sogTlHd?]]></candidate>
      <autotag group="SoGBonTal" tag="Communication"/>
      <description/>
      <headertitle><![CDATA[@text = "Communication Talents"]]></headertitle>
      <additem><![CDATA[@text = hero.childfound[resSGSECommunicat].field[resAddICnt].text]]></additem>
      </table_dynamic>
    </portal>
  <portal id="pSoGDrwCommunication" style="table">
    <table_dynamic component="SoGDrawbk" showtemplate="tmSoGTalPk" choosetemplate="tmSoGTalTh">
      <list><![CDATA[component.SoGDrawbk & !Hide.All & SoGSphere.Communication]]></list>
      <candidate><![CDATA[SoGSphere.Communication & !Helper.Obsolete]]></candidate>
      <description/>
      <headertitle><![CDATA[@text = "Communication Drawbacks"]]></headertitle>
      <additem><![CDATA[@text = "Add Communication Drawback"]]></additem>
      </table_dynamic>
    </portal>
  <!-- Communication Info layout -->
  <layout id="loSoGCommunication">
    <portalref portal="pSoGCommunication" taborder="5"/>
    <portalref portal="pSoGTalCommunication" taborder="10"/>
    <portalref portal="pSoGDrwCommunication" taborder="15"/>
    <templateref template="tmSoGAsRnSph" thing="sogSpCommunicatio"/>
    <templateref template="tmSoGDCSph" thing="sogSpCommunicatio"/>
    <templateref template="tmSoGRngSp" thing="sogSpCommunicatio"/>
    <position><![CDATA[
                autogap = 2

                perform portal[pSoGCommunication].batchadd
                portal[pSoGCommunication].width = autoright

                ~ Associated Skill label
                perform template[tmSoGAsRnSph].batchadd

                ~ Save DC label
                perform template[tmSoGDCSph].batchadd

                ~ Ranges
                perform template[tmSoGRngSp].batchadd

                perform portal[pSoGTalCommunication].batchadd[5]
                portal[pSoGTalCommunication].width = autoright

                perform portal[pSoGDrwCommunication].batchadd[5]
                portal[pSoGDrwCommunication].width = autoright

                height += portal[pSoGDrwCommunication].bottom
                perform batchplace
	]]></position>
    </layout>
  <!-- PANELS -->
  <panel id="tbSoGCommunication" name="Communication" order="160" marginhorz="5" marginvert="5">
    <live>SoGSphTab.Communication</live>
    <layoutref layout="loSoGCommunication"/>
    </panel>
