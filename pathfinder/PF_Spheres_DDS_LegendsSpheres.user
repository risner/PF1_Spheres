    <tag group="ChargeCalc" tag="LevelDiv2"/>
    <tag group="Helper" tag="SpecUp" name="SpecUp" abbrev="SpecUp"/>
    <tag group="Hide" tag="ClSpecList" name="Class Special List" abbrev="Class Special List"/>
