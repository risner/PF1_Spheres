    <tag group="ProductId" tag="DropDead" name="Drop Dead Studios" abbrev="Drop Dead Studios"/>
    <eval phase="First" priority="50">~ Always run this, as it is a choice between two options.
  if (field[usrIndex].value = 0) then
    ~ Keep Emotions - so hide this except on class tab.
    perform assign[Helper.SpecUp]
    perform delete[Helper.ShowSpec]
    perform assign[Hide.Statblock]
  elseif (field[usrIndex].value = 1) then
    ~ Trade Emotions for Utility Expertise.

    ~ Find the Emotions class special, and change to 5th
    perform hero.childfound[cSoPElicEm].setfocus
    doneif (state.isfocus = 0)

    perform focus.assign[ClSpecWhen.5]
    perform focus.delete[ClSpecWhen.2]

    ~ Find the archetype and change the custom ability total for Emotions.
    perform root.setfocus
    doneif (state.isfocus = 0)

    ~ Remove Emotions at 2nd, 8th, 14th, and 20th level.
    ~ Reduce all lines with increases to maintain the loss of the 4 emotions.
    focus.field[cvCustTot].arrayvalue[1] = -1
    focus.field[cvCustTot].arrayvalue[4] = -1
    focus.field[cvCustTot].arrayvalue[7] = -2
    focus.field[cvCustTot].arrayvalue[10] = -2
    focus.field[cvCustTot].arrayvalue[13] = -3
    focus.field[cvCustTot].arrayvalue[16] = -3
    focus.field[cvCustTot].arrayvalue[19] = -4

    ~ Mark Emotions as modified
    perform focus.linkage[varies].assign[AbModify.cSoPElicEm]
  endif</eval>
    <eval phase="PostLevel" priority="1000" index="2">~ At 2nd and every 2 levels.
  var c as number
  c = round(field[xTotalLev].value/2,0,-1)

  debug "ðŸ›  Adding " &amp; c &amp; " [utility] talents from Utility Expertise."
  hero.findchild[Resource, "thingid.resSGUtilTal"].field[resMax].value += c

  doneif (hero.tagis[source.pPF1e_ExpUtil] = 0)

  ~ Also add here if enabled.
  debug "ðŸ›  Adding " &amp; c &amp; " Expanded [utility] talents from Utility Expertise."
  hero.findchild[Resource, "thingid.resSGExUtilTal"].field[resMax].value += c</eval>
    <evalrule phase="Render" priority="1000" message="Utility Expertise may not be taken when emotions are altered or replaced." summary="Utility Expertise may not be taken when emotions are altered or replaced."><![CDATA[~ Emotions were chosen, so we are valid.
  validif (field[usrIndex].value = 0)

  @valid = 0
  ~ No replacements are valid.
  doneif (hero.tagcount[AbReplace.cSoPElicEm] <> 0)

