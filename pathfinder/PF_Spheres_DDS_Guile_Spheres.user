         var gp as number
         bon = round(focus.field[skRanks].value/4,0,-1)
         if (bon = 0) then
           gp = 250
         elseif (bon = 1) then
           gp = 500
         else
           ~ f(x) = 2000 * 4^{x - 2}
           bon -= 1
           gp = 2000 * power(4, bon)
